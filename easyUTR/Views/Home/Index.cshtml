@{
    ViewData["Title"] = "Welcome to UTR - Your Ultimate Travel Companion";
}

<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold">Fuel Your Journey with UTR</h1>
                <p class="lead">Experience convenience, quality, and rewards at every stop.</p>
                <a asp-area="" asp-controller="Stores" asp-action="Index" class="btn btn-primary btn-lg">Find a UTR Station</a>
            </div>
            <div class="col-lg-6">
                <img src="/images/utr-store.jpg" alt="UTR Station" class="img-fluid rounded-3 shadow">
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="services py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Our Premium Services</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-0 h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-fuel-pump display-4 text-primary mb-3"></i>
                        <h3 class="card-title h4">Quality Fuel</h3>
                        <p class="card-text">Top-tier fuel options for optimal vehicle performance.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-shop display-4 text-primary mb-3"></i>
                        <h3 class="card-title h4">Convenient Store</h3>
                        <p class="card-text">Fresh snacks, meals, and essentials for your journey.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-cup-straw display-4 text-primary mb-3"></i>
                        <h3 class="card-title h4">Refreshing Beverages</h3>
                        <p class="card-text">A wide selection of drinks to quench your thirst.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Rewards Program -->
<section class="rewards-program py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 order-lg-2">
                <img src="/images/utr-rewards.jpg" class="img-fluid rounded-3 shadow" alt="UTR Rewards Card">
            </div>
            <div class="col-lg-6 order-lg-1">
                <h2 class="mb-4">UTR Rewards: Earn More, Save More</h2>
                <p class="lead">Join our rewards program and start earning points on every purchase. Redeem your points for fuel, snacks, and exclusive deals!</p>
                <ul class="list-unstyled">
                    <li><i class="bi bi-check-circle-fill text-primary me-2"></i> Earn points on fuel and in-store purchases</li>
                    <li><i class="bi bi-check-circle-fill text-primary me-2"></i> Redeem points for discounts and free items</li>
                    <li><i class="bi bi-check-circle-fill text-primary me-2"></i> Access exclusive member-only promotions</li>
                </ul>
                <a asp-action="RewardIntro" class="btn btn-primary btn-lg mt-3">Join UTR Rewards</a>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials -->
<section class="testimonials py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">What Our Customers Say</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card border-0 h-100 shadow-sm">
                    <div class="card-body">
                        <p class="card-text">"UTR has been my go-to for years. The rewards program is fantastic, and the staff is always friendly!"</p>
                        <footer class="blockquote-footer mt-3">Sarah J.</footer>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card border-0 h-100 shadow-sm">
                    <div class="card-body">
                        <p class="card-text">"I love the convenience of UTR stations. Clean facilities and great selection of snacks for road trips!"</p>
                        <footer class="blockquote-footer mt-3">Mike T.</footer>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card border-0 h-100 shadow-sm">
                    <div class="card-body">
                        <p class="card-text">"The quality of UTR's fuel is noticeable. My car runs smoother, and I get better mileage. Highly recommended!"</p>
                        <footer class="blockquote-footer mt-3">Emily R.</footer>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>