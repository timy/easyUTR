@model easyUTR.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<div class="container my-5">
    <h1 class="mb-4">Checkout</h1>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Checkout" method="post">
                <h3>Shipping Information</h3>
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label">Full Name</label>
                    <input asp-for="FullName" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label asp-for="Address" class="form-label">Address</label>
                    <input asp-for="Address" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label asp-for="City" class="form-label">City</label>
                    <input asp-for="City" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label asp-for="PostalCode" class="form-label">Postal Code</label>
                    <input asp-for="PostalCode" class="form-control" required>
                </div>

                <h3 class="mt-4">Payment Information</h3>
                <div class="mb-3">
                    <label asp-for="CardNumber" class="form-label">Card Number</label>
                    <input asp-for="CardNumber" class="form-control" placeholder="1234 5678 9012 3456" required>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="CardExpiry" class="form-label">Expiry Date</label>
                        <input asp-for="CardExpiry" class="form-control" placeholder="MM/YY" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="CardCVV" class="form-label">CVV</label>
                        <input asp-for="CardCVV" class="form-control" placeholder="123" required>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary mt-3">Place Order</button>
            </form>
        </div>
        <div class="col-md-4">
            <h3>Order Summary</h3>
            <ul class="list-group mb-3">
                @foreach (var item in Model.Cart.CartItems)
                {
                    <li class="list-group-item d-flex justify-content-between lh-sm">
                        <div>
                            <h6 class="my-0">@item.Item.ItemName</h6>
                            <small class="text-muted">Quantity: @item.Quantity</small>
                        </div>
                       
                    </li>
                }
                <li class="list-group-item d-flex justify-content-between">
                    <span>Total (USD)</span>
                    <strong>$@Model.Cart.TotalPrice</strong>
                </li>
            </ul>
        </div>
    </div>
</div>