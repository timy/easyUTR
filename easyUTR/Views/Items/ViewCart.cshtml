@model easyUTR.ViewModels.Items.ShoppingCartViewModel

@{
}


<h2>Shopping Cart</h2>


<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => Model.CartItems[0].Item.ItemName)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.CartItems[0].Quantity)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var items in Model.CartItems)
        {
            <tr>
                <td>
                    @items.Item.ItemName
                </td>
                <td>
                    @items.Quantity
                </td>
                <td>
                    <a asp-action="RemoveFromCart"
                    asp-route-itemId="@items.Item.ItemId"
                    class="btn btn-outline-primary btn-sm"  hidden>Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    You have @Model.TotalQuantity items in your cart.
</div>

@if (Model.TotalQuantity > 0)
{
    <form method="post">
        <button type="submit">Proceed to Checkout</button>
    </form>
}